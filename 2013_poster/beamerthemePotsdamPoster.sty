%%%%%%%%%%%%
%NEW ENVIRONMENT blockwh
%%%%%%%%%%%%
\newenvironment{blockwh}[2]{
\begin{block}{#1}
	%comupte the available width for the minipage = linewidth - leftskip - 2*sep
	\hsize=\linewidth%
	\advance\hsize by-\beamer@colbox@ls%
	\advance\hsize by-2\beamer@colbox@sep%
	\begin{minipage}[t][#2]{\hsize}
}{
	\end{minipage}
\end{block}
}

